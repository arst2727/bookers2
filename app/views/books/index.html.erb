<!-- 本の削除成功のメッセージ表示 -->
<%= flash[:success] %>

<div class="container">
  <div class="row">
    <!-- 以下を追加 -->
    <div class="col-lg-4" style="background-color: orange;">
      <h2>User Info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.png" %>

      <table>
        <tr></tr>
        <tr><th>name</th><td><%= %></td></tr>
        <tr></tr>
        <tr><th>introduction</th><td><%= %></td></tr>

      </table>
      <a href=>haguruma</a>

      <h2>New book</h2>

      <!-- form_with部分 -->
      <%= form_with model: @book,local: true do |f| %>
        <%# ここからエラーメッセージ %>
        <% if @book.errors.any? %>
          <%= @book.errors.count %> errors prohibited this book from being saved:<br>
            <% @book.errors.full_messages.each do |message| %>
              ・<%= message %><br>
            <% end %>
        <% end %>
        <%# ここまでエラーメッセージ %>
        <h4>Title</h4>
        <div><%= f.text_field :title %></div>

        <h4>Opinion</h4>
        <div><%= f.text_area :opinion%></div>
        <div><%= f.submit 'Create Book' %></div>
      <% end %>
    </div>

    <div class="col-lg-8">
      <h2>Books</h2>
      <table>
        <thread>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thread>
        <tbody>
          <!--投稿されたデータ分だけ繰り返す-->
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.png" %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td><%= book.opinion %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>





