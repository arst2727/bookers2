<div class="container">
    <div class="row">
        <div class="col-md-3">
            <!--部分テンプレート-->
            <%= render partial: 'books/list', locals: {user: @user, new_book: @new_book, f: @f} %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
              <table class="table">
                <thread>
                  <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th></th>
                    <th></th>
                  </tr>
                </thread>
                <tbody>
                  <tr>
                    <td>
                        <%= link_to user_path(@book.user) do %>
                            <%= attachment_image_tag(@book.user, :profile_image, fallback: "no_image.png" , size: "40x40") %></br>
                            <%= @book.user.name %>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to @book.title, book_path(@book.id) %>
                    </td>
                    <td><%= @book.body %></td>
                    <td>
                        <% if @book.user == current_user %>
                            <%= link_to "Edit", edit_book_path(@book.id) %>
                        <% end %>
                    </td>
                    <td>
                        <% if @book.user == current_user %>
                            <%= link_to "Destroy", book_path(@book), method: :delete %>
                        <% end %>
                    </td>
                  </tr>

                </tbody>
              </table>
        </div>
    </div>
</div>