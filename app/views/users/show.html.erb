<div class="container">
  <div class="row">
    <!-- 以下を追加 -->
    <div class="col-md-3">
      <!--部分テンプレート-->
      <%= render partial: 'books/list', locals: {user: @user, new_book: @new_book, f: @f} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thread>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
        </thread>
        <tbody>
          <!--投稿されたデータ分だけ繰り返す-->
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag(book.user, :profile_image, fallback: "no_image.png" , size: "40x40") %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>