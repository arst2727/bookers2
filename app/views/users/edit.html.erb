<h1>User Info</h1>
<!-- form_with部分 -->
<%= form_with model: @user, local: true do |f| %>
  <%# ここからエラーメッセージ %>
  <% if @user.errors.any? %>
    <%= @user.errors.count %> errors prohibited this obj from being saved:<br>
      <% @user.errors.full_messages.each do |message| %>
        ・<%= message %><br>
      <% end %>
  <% end %>
  <h4>name</h4>
  <%= f.text_field :name %>

  <h4>Image</h4>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.png"%>
  <label for="inputImage"></label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>

  <h4>introduction</h4>
  <%= f.text_area :introduction %>

  <div><%= f.submit 'Update User' %></div>

<% end %>