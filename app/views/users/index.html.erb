<table>
  <thread>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thread>
  <tbody>
    <!--投稿されたデータ分だけ繰り返す-->
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.png" %>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id)%></td>
    </tr>
    <% end %>
  </tbody>
</table>
