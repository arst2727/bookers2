<div class="container">
  <div class="row">
    <!-- 以下を追加 -->
    <div class="col-md-3">
      <!--部分テンプレート-->
      <%= render partial: 'books/list', locals: {user: @current_user, new_book: @new_book, f: @f} %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thread>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thread>
        <tbody>
          <!--投稿されたデータ分だけ繰り返す-->
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag(user, :profile_image, fallback: "no_image.png" , size: "40x40") %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id)%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
